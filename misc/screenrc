hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

bell_msg "Bell in window %n^G"
defnonblock on
defscrollback 10000

startup_message off

encoding utf-8
defencoding utf-8
defutf8 on

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock
