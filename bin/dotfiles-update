#!/usr/bin/env bash

set -ueo pipefail

DOTFILES_PATH="$HOME/.dotfiles"

while read line; do
	cmd=$(echo "$line" | awk -F"\t+" '{print $1}')
	src=$(echo "$line" | awk -F"\t+" '{print $2}')
	dest=$(echo "$line" | awk -F"\t+" '{print $3}')

	case "$dest" in
		"%php.d%")
			dest=$(php -i |grep additional | awk -F ' => ' '{ print $2 }')/
		;;
		"")
			dest="$HOME/.$(basename "$src")"
		;;
		*)
			if [ -n "$dest" ]; then
				dest="$HOME/$dest"
			fi
		;;
	esac

	prefix=""
	if [ ! -O "$dest" ]; then
		prefix="sudo"
	fi

	if [ -n "$dest" ]; then
		if [[ "$dest" =~ /$ ]] ; then
			$prefix mkdir -p "$dest";
		else 
			$prefix mkdir -p $(dirname "$dest");
		fi
	fi

	
	case $cmd in
		ln|symlink)
			$prefix ln -sfv "$DOTFILES_PATH/"$src "$dest"
		;;
	esac
done < <(grep -vE -e "^\s*#" -e "^\s*$" "$DOTFILES_PATH/install")

(
	cd "$DOTFILES_PATH"
	npm install
	pip install -r requirements.txt --user --install-option="--install-scripts=$HOME/bin"
)

if [ -f "$HOME/bin/composer" ]; then
	"$HOME/bin/composer" self-update
else
	(
		cd $HOME/bin
		curl -s http://getcomposer.org/installer | php -- --filename="composer"
		chmod a+x composer
	)
fi

composer global install

